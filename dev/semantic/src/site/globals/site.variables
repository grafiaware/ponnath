/*******************************
     User Global Variables
*******************************/


@importGoogleFonts : false;
@fontName: "MyriadPro";
@headerFont: "PierceJamesonSans";  
@pageFont: @fontName; 


/* -------------------
    Brand Colors
-------------------- */

@primaryColor: #a50028;
@secondaryColor: @black;

@lightPrimaryColor: lighten(@primaryColor, 10);
@lightSecondaryColor: @lightBlack;

/* -------------------
      Base Sizes 
-------------------- */

/* This is the single variable that controls them all */
@emSize: 20px;

/* The size of page text */
@fontSize: 20px;

/* -------------------
        Page
-------------------- */

@pageBackground: #fff;
@pageOverflowX: hidden;

@lineHeight: 1.4285em;
@textColor: #666;

@headerTopMargin: 2.4rem;
@headerFontWeight: 400;

@h1: unit((22 / 14), rem);
@h2: unit((16 / 14), rem);
@h3: unit((16 / 14), rem);
@h4: unit((14 / 14), rem);
@h5: unit((12 / 14), rem);
@h6: unit((10 / 14), rem);

/*-------------------
       Links
--------------------*/

@linkColor: #2b2b2b;
@linkUnderline: underline;
@linkHoverColor: if(iscolor(@linkColor), darken(saturate(@linkColor, 20), 15, relative), @linkColor);
@linkHoverUnderline: @linkUnderline;

/* ------------------- 
     Breakpoints
-------------------- */

@mobileBreakpoint: 320px;
@tabletBreakpoint: 747px;
@computerBreakpoint: 1005px;
@largeMonitorBreakpoint: 1347px;
@widescreenMonitorBreakpoint: 1920px;